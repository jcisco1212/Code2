# ==============================================
# Get-Noticed Backend Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ==============================================

NODE_ENV=development
PORT=4000

# ==============================================
# Database (PostgreSQL)
# ==============================================
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# For production, use a strong password!
DATABASE_URL=postgresql://postgres:YOUR_SECURE_PASSWORD_HERE@localhost:5432/talentvault

# Enable SSL for production databases (set to 'true' for cloud databases)
DB_SSL=false

# ==============================================
# Redis (for caching and sessions)
# ==============================================
REDIS_URL=redis://localhost:6379

# ==============================================
# JWT Authentication (Regular Users)
# ==============================================
# IMPORTANT: Generate strong secrets for production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_A_64_BYTE_HEX_SECRET_HERE
JWT_REFRESH_SECRET=GENERATE_ANOTHER_64_BYTE_HEX_SECRET_HERE
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ==============================================
# Admin Authentication (Separate from regular users)
# ==============================================
# IMPORTANT: Use DIFFERENT secrets from regular JWT for admin portal!
# This provides separation between regular user sessions and admin sessions
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
ADMIN_JWT_SECRET=GENERATE_A_DIFFERENT_64_BYTE_HEX_SECRET_FOR_ADMIN
ADMIN_JWT_REFRESH_SECRET=GENERATE_ANOTHER_DIFFERENT_64_BYTE_HEX_SECRET_FOR_ADMIN
ADMIN_JWT_EXPIRES_IN=1h
ADMIN_JWT_REFRESH_EXPIRES_IN=7d

# ==============================================
# Frontend URL (for CORS)
# ==============================================
FRONTEND_URL=http://localhost:3001

# ==============================================
# File Uploads
# ==============================================
UPLOAD_DIR=./uploads
MAX_VIDEO_SIZE=524288000
MAX_IMAGE_SIZE=10485760

# ==============================================
# Email (SMTP)
# ==============================================
# For production, use a real SMTP service (SendGrid, Mailgun, AWS SES, etc.)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
EMAIL_FROM=noreply@get-noticed.com

# ==============================================
# AWS S3 (Cloud File Storage)
# ==============================================
# Required for S3 uploads. Create an IAM user with S3 permissions.
# See: https://docs.aws.amazon.com/IAM/latest/UserGuide/id_credentials_access-keys.html

AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# S3 Bucket Names (create these buckets in your AWS account)
S3_BUCKET=get-noticed-videos
S3_THUMBNAILS_BUCKET=get-noticed-thumbnails
S3_PROFILES_BUCKET=get-noticed-profiles

# Optional: For S3-compatible services (MinIO, Cloudflare R2, DigitalOcean Spaces)
# S3_ENDPOINT=http://localhost:9000
# S3_FORCE_PATH_STYLE=true

# ==============================================
# CloudFront CDN (optional - for video delivery)
# ==============================================
# Recommended for production to reduce S3 costs and improve video playback
# CLOUDFRONT_DOMAIN=dxxxxxxxxx.cloudfront.net
# CLOUDFRONT_KEY_PAIR_ID=KXXXXXXXXX
# CLOUDFRONT_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----

# ==============================================
# Google Analytics (optional)
# ==============================================
# GA_MEASUREMENT_ID=G-XXXXXXXXXX
