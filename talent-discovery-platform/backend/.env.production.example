# ==============================================
# Get-Noticed Backend - PRODUCTION Environment
# ==============================================
# Copy this to .env and fill in your values
# NEVER commit .env to version control!
# ==============================================

NODE_ENV=production
PORT=4000
HOST=0.0.0.0

# ==============================================
# Database (PostgreSQL) - USE MANAGED DATABASE!
# ==============================================
# Recommended: AWS RDS, DigitalOcean Managed DB, Supabase, Railway
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://your_user:YOUR_STRONG_PASSWORD@your-db-host.com:5432/get_noticed_prod

# Enable SSL for cloud databases (REQUIRED for most managed databases)
DB_SSL=true

# ==============================================
# Redis (for caching, sessions, queues)
# ==============================================
# Recommended: AWS ElastiCache, Redis Cloud, Upstash
REDIS_URL=redis://default:YOUR_REDIS_PASSWORD@your-redis-host.com:6379

# ==============================================
# JWT Authentication
# ==============================================
# CRITICAL: Generate strong secrets!
# Run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_64_BYTE_HEX_SECRET_1
JWT_REFRESH_SECRET=GENERATE_64_BYTE_HEX_SECRET_2
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Admin JWT (use DIFFERENT secrets!)
ADMIN_JWT_SECRET=GENERATE_64_BYTE_HEX_SECRET_3
ADMIN_JWT_REFRESH_SECRET=GENERATE_64_BYTE_HEX_SECRET_4
ADMIN_JWT_EXPIRES_IN=1h
ADMIN_JWT_REFRESH_EXPIRES_IN=7d

# ==============================================
# Security
# ==============================================
BCRYPT_ROUNDS=12
SESSION_SECRET=GENERATE_ANOTHER_SECRET_HERE

# CORS - Your production frontend URL
CORS_ORIGIN=https://your-frontend-domain.com
FRONTEND_URL=https://your-frontend-domain.com

# ==============================================
# File Storage (AWS S3 or compatible)
# ==============================================
# Recommended: AWS S3, Cloudflare R2, DigitalOcean Spaces
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET=get-noticed-uploads-prod
# S3_ENDPOINT= (only needed for S3-compatible services like R2, Spaces)

# CloudFront CDN (optional but recommended for video delivery)
# CLOUDFRONT_DOMAIN=dxxxxxxxxx.cloudfront.net
# CLOUDFRONT_KEY_PAIR_ID=KXXXXXXXXX
# CLOUDFRONT_PRIVATE_KEY=/path/to/private-key.pem

# ==============================================
# Email (SMTP)
# ==============================================
# Recommended: SendGrid, Mailgun, AWS SES, Postmark
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM=noreply@your-domain.com
SMTP_FROM_NAME=Get-Noticed

# ==============================================
# AI Services (Optional)
# ==============================================
# OpenAI API for video analysis
OPENAI_API_KEY=sk-your-openai-api-key

# ==============================================
# Rate Limiting
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
UPLOAD_RATE_LIMIT_WINDOW_MS=3600000
UPLOAD_RATE_LIMIT_MAX_REQUESTS=20

# ==============================================
# Monitoring & Error Tracking (Recommended)
# ==============================================
# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn

# ==============================================
# Video Processing
# ==============================================
VIDEO_UPLOAD_MAX_SIZE=524288000
VIDEO_ALLOWED_TYPES=video/mp4,video/quicktime,video/x-msvideo,video/webm
THUMBNAIL_SIZE=320x180

# ==============================================
# Feature Flags
# ==============================================
FEATURE_2FA_ENABLED=true
FEATURE_AI_SCORING_ENABLED=true
FEATURE_AGENT_DASHBOARD_ENABLED=true
FEATURE_VIRUS_SCAN_ENABLED=false
