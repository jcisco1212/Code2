# ===========================================
# Get-Noticed Environment Configuration
# ===========================================

# Application
NODE_ENV=development
APP_NAME=Get-Noticed
APP_URL=http://localhost:3000
API_URL=http://localhost:4000

# Server
PORT=4000
HOST=0.0.0.0

# Database - PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/get-noticed
DB_HOST=localhost
DB_PORT=5432
DB_NAME=get-noticed
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# 2FA
TOTP_SECRET_LENGTH=20
TOTP_WINDOW=1

# Email - SMTP Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@get-noticed.com
SMTP_FROM_NAME=Get-Noticed

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin

# S3 Configuration
S3_BUCKET=get-noticed-videos
S3_ENDPOINT=http://localhost:9000
S3_FORCE_PATH_STYLE=true

# CloudFront (Production)
CLOUDFRONT_DOMAIN=
CLOUDFRONT_KEY_PAIR_ID=
CLOUDFRONT_PRIVATE_KEY=

# Video Processing
VIDEO_UPLOAD_MAX_SIZE=524288000
VIDEO_ALLOWED_TYPES=video/mp4,video/quicktime,video/x-msvideo,video/webm
THUMBNAIL_SIZE=320x180
TRANSCODE_FORMATS=480p,720p,1080p

# AI Services
AI_SERVICE_URL=http://localhost:5000
AI_API_KEY=your-ai-service-api-key

# OpenAI API (for AI video analysis with GPT-4 Vision)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
UPLOAD_RATE_LIMIT_WINDOW_MS=3600000
UPLOAD_RATE_LIMIT_MAX_REQUESTS=10

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your-session-secret-change-in-production

# Content Moderation
MODERATION_ENABLED=true
AUTO_MODERATION_THRESHOLD=0.8

# ClamAV Virus Scanning
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# Sentry Error Tracking
SENTRY_DSN=

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Queue Configuration
QUEUE_TYPE=bull
QUEUE_CONCURRENCY=5

# MediaConvert (Production)
MEDIACONVERT_ENDPOINT=
MEDIACONVERT_ROLE=

# Feature Flags
FEATURE_2FA_ENABLED=true
FEATURE_AI_SCORING_ENABLED=true
FEATURE_AGENT_DASHBOARD_ENABLED=true
FEATURE_VIRUS_SCAN_ENABLED=true
